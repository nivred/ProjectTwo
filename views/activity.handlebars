    <div id="main" class="row">
        <div id="leftPanel" class="col-md-2">
            <h2>DASHBOARD</h2>

            <!-- this is for purposes of grabbing the current displayed race line graph-->
            <div id="currUserID" value={{user.ID}} hidden></div>
            <div id="currRaceID" value={{race}} hidden></div>
            <!-- back to the HTML -->

            <p>{{user.firstName}} {{user.lastName}}<br>
            {{user.city}}, {{user.state}}</p>
            
            <h4>Total Races</h4>
            <p>10</p>
            
            <h4>1st Place Wins</h4>
            <p>2</p>
            
            <h4>Total Distance</h4>
            <p>826 miles</p>
            <br>
            <div class="text-center">
                <button type="submit" id="startRace" class="btn center btn-default btn-block" data-toggle="modal" data-target="#newRaceModal"><span class="glyphicon glyphicon-road"></span> Start New Race</button>
                <a href="/join/{{ID}}" class="btn center btn-default btn-block"><span class="glyphicon glyphicon-stats"></span>Join Race</a>
                <button type="submit" id="joinRace" class="btn center btn-default btn-block" data-toggle="modal" data-target="#startRaceModal"><span class="glyphicon glyphicon-stats"></span> Your Past Races</button>
            </div>
        </div><!-- end leftPanel -->

        <div class="row">
            <div id="raceTracker" class="col-md-7">
                <div id="map" ></div>
            </div>
            <div id="raceChart" class="col-md-2">
                <h2>CURRENT RACE CHART</h2>
                <canvas id="myChart"></canvas>
            </div>
        </div>
    </div>

    <div id="raceStats" class="row">
        <div class="col-md-12">
            <div class="col-md-9">
                <h2>{{raceInfo.raceName}}</h2>
            </div>
            <div id="enterStats" class="col-md-3">
                <button type="submit" id="update" class="btn btn-md btn-danger" data-toggle="modal" data-target="#updateModal"><span class="glyphicon glyphicon-plus"></span> Update Progress</button>
            </div>
        </div>
        
        <div class="col-md-12">
            <div class="col-md-3">
                <h4>Total Distance Covered</h4>
                <p>72 miles</p>
                <h4>Session Distance Covered</h4>
                <p>6 miles</p>
                <h4>Total Duration</h4>
                <p>10.8 hours</p>
                <h4>Session Duration</h4>
                <p>2 hours</p>                  
            </div>
            
            <div class="col-md-3">
                <h4>Average Pace</h4>
                <p>9.1 minute mile</p>
                <h4>Average Speed</h4>
                <p>6.6 mph</p>
                <h4>Current Position</h4>
                <p>5th</p>
            </div>
            <div class="col-md-3">
                <h4>Race Leaders</h4>
                <p>J.J. McClure<br>
                Capt. Chaos<br>
                James Bond</p>
        
                <h4>Total # of Racers</h4>
                <p>106</p>
            </div>
            <div class="col-md-3">
                <h4>Race Start Date</h4>
                <p>{{raceInfo.startDate}}</p>
                <h4>Race End Date</h4>
                <p>{{raceInfo.endDate}}</p>       
                <h4>Distance Remaining</h4>
                <p>152 miles</p>
            </div>
        </div>
    </div>
 
    <!-- Modal -->
    <div id="newRaceModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h2 class="modal-title">Start New Race</h2>
                </div>
                <div class="modal-body">
                    <!-- form content-->
                    <form role="form">
                        <div class="form-group">
                            <label for="">Name of Your Race</label>
                            <input type="text" class="form-control" id="raceName" size="22">
                        </div>

                        <div class="form-group">
                            <label for="">Race type</label>
                            <select class="form-control">
                                <option value="run">Run</option>
                                <option value="bike">Bike</option>
                                <option value="walk">Walk</option>	
                            </select>
                        </div>


                        <div class="form-group">
                            <label for="">Member Limit</label>
                            <input type="number" class="form-control" id="limit" min="1" max="100">
                        </div>

                        <div class="form-group">
                            <label for="">Start Location</label>
                            <input type="text" class="form-control" id="startLocation">
                        </div>


                        <div class="form-group">
                            <label for="">End Location</label>
                            <input type="text" class="form-control" id="endLocation">
                        </div>

                        <div class="form-group">
                            <label for="">Start Date</label>
                            <input type="date" class="form-control" id="startDate">
                        </div>
    
                        <div class="form-group">
                            <label for="">End Date</label>
                            <input type="date" class="form-control" id="endDate">
                        </div>

                        <button type="submit" class="btn btn-success btn-lg submit">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </div> <!-- /end newRaceModal -->

    <!-- Modal -->
    <div id="updateModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h2 class="modal-title">Update Progress</h2>
                </div>
                <div class="modal-body">
                    <!-- form content-->
                    <form id="updateForm">
                        <fieldset>
                            <div class="form-group"> 
                                <label for="">Date</label>
                                <input type="date" class="form-control" id="date" name="entryDate">
                            </div>
                            <div class="form-group">
                                <label for="">Distance</label>                            

                                <input type="number" class="form-control" min="0" step="0.1" value="0.0" id="distance" name="distance">

                            </div>
                            <div class="form-group">
                                <input type="radio" id="miles" name="distanceType" value="miles"> Miles <br>
                                <input type="radio" id="kilometers" name="distanceType" value="kilometers"> Kilometers
                            </div>
                            <div class="form-group">                                                                 
                                <label for="">Hours</label>
                                <input type="number" class="form-control" id="hours" name="hours" min="1" max="99">
                            </div>
                            <div class="form-group"> 
                                <label for="">Minutes</label>
                                <input type="number" class="form-control" id="minutes" name="minutes" min="1" max="59">
                            </div>
                            <button type="submit" class="btn btn-danger btn-lg submit">Submit</button>
                        </fieldset>
                    </form> <!-- /end form -->
                </div>
            </div>
        </div>

    </div> <!-- /end updateModal -->

    </div> <!-- /end Modal -->

